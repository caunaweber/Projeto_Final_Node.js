<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatório Geral - Feedback Hub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #fbfcff;
            background-image: 
                radial-gradient(at 0% 100%, hsla(210, 60%, 85%, 0.2) 0px, transparent 50%),
                radial-gradient(at 90% 10%, hsla(220, 20%, 40%, 0.15) 0px, transparent 50%),
                radial-gradient(at 100% 100%, hsla(240, 20%, 70%, 0.1) 0px, transparent 50%),
                radial-gradient(at 0% 0%, hsla(243, 100%, 70%, 0.1) 0px, transparent 50%);
            background-repeat: no-repeat;
            background-attachment: fixed;
            overflow-x: hidden;
        }

        main {
            flex: 1;
        }

        footer {
            background-color: #f8f9fa;
        }

        .report-card {
            background-color: #fff;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 4px 25px rgba(0, 0, 0, 0.08);
            height: 100%;
        }

        .table-responsive {
            max-height: 500px; 
        }
        
        .table thead {
            position: sticky;
            top: 0;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <main class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2" style="color: #3f3d56; font-weight: 700;">Relatório Geral</h1>
            <a href="/dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>

        <div class="row g-4">
            <div class="col-lg-6">
                <div class="report-card">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0"><i class="bi bi-people-fill me-2" style="color: #6c63ff;"></i>Usuários (<%= usuarios.length %>)</h4>
                    <a href="/relatorios/usuarios/print" target="_blank" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-printer-fill me-1"></i> Imprimir
                    </a>
                </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% usuarios.forEach(u => { %>
                                    <tr>
                                        <td><%= u.id %></td>
                                        <td><%= u.username %></td>
                                        <td>
                                            <% if (u.role === 'admin') { %>
                                                <span class="badge bg-primary">Admin</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">User</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="report-card">
                   <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0"><i class="bi bi-box-seam-fill me-2" style="color: #6c63ff;"></i>Produtos (<%= produtos.length %>)</h4>
                    <a href="/relatorios/produtos/print" target="_blank" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-printer-fill me-1"></i> Imprimir
                    </a>
                </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Categoria</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% produtos.forEach(p => { %>
                                    <tr>
                                        <td><%= p.id %></td>
                                        <td><%= p.nome %></td>
                                        <td><%= p.categoria %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>