<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main.container {
            flex: 1;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .card {
            background-color: #fff;
            color: #333;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .btn-purple {
            background-color: #6c63ff;
            color: white;
            border: none;
        }

        .btn-purple:hover {
            background-color: #5a52e0;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            max-width: 1100px;
            margin: 0 auto;
            padding-top: 30px;
        }

        .product-card {}

        .product-card {
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.8rem 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.5s ease forwards;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        .product-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #3f3d56;
            /* um cinza escuro */
            margin-bottom: 0.8rem;
            text-align: center;
        }

        .product-description {
            max-height: 4.5em;
            line-height: 1.5em;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        .btn-details {
            align-self: center;
            background-color: #6c63ff;
            border: none;
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: 0.5rem;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .btn-details:hover {
            background-color: #5a52e0;
        }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

    <%- include('partials/header') %>

        <main class="container">

            <% if (message) { %>
                <div class="alert alert-<%= type || 'info' %> text-center">
                    <%= message %>
                </div>
                <% } %>

                    <div class="row">
                        <% produtos.forEach(produto=> { %>
                            <div class="col-md-6 mb-4">
                                <div class="product-card h-100 d-flex flex-column justify-content-between">
                                    <div>
                                        <h5>
                                            <%= produto.nome %>
                                        </h5>
                                        <p class="product-description">
                                            <%= produto.descricao.length> 65 ? produto.descricao.slice(0, 65) + '...'
                                                : produto.descricao %>
                                        </p>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <small class="text-muted m-0">Categoria: <%= produto.categoria %></small>
                                        <a href="/produtos/<%= produto.id %>"
                                            class="btn btn-purple btn-details">Detalhes</a>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
        </main>

        <%- include('partials/footer') %>
</body>

</html>