    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main.container {
            flex: 1;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .card {
            background-color: #fff;
            color: #333;
            border-radius: 1rem;
            padding: 2rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .btn-purple {
            background-color: #6c63ff;
            color: white;
            border: none;
        }

        .btn-purple:hover {
            background-color: #5a52e0;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            max-width: 1100px;
            margin: 0 auto;
            padding-top: 30px;
        }

        .product-card {
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.8rem 1.5rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        .product-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #3f3d56;
            /* um cinza escuro */
            margin-bottom: 0.8rem;
            text-align: center;
        }

        .product-description {
            font-size: 1rem;
            color: #555;
            /* cinza m√©dio para texto */
            flex-grow: 1;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .btn-details {
            align-self: center;
            background-color: #6c63ff;
            border: none;
            color: white;
            padding: 0.5rem 1.2rem;
            border-radius: 0.5rem;
            cursor: pointer;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .btn-details:hover {
            background-color: #5a52e0;
        }
    </style>
</head>

